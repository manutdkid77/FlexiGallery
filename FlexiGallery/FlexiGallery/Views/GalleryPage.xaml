<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexiGallery.Views.GalleryPage">
    <ContentPage.Content>
        <ScrollView>
            <FlexLayout x:Name="flxContainer" Direction="Row" Wrap="Wrap" JustifyContent="SpaceBetween">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="0" HasShadow="False" Visual="Material" CornerRadius="0">
                            <Image Aspect="AspectFill" Source="https://dummyimage.com/200x200/2bd69a/fff" />
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>