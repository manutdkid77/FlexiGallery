<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexiGallery.Views.GalleryPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout CompressedLayout.IsHeadless="True">
                <Stepper Minimum="1" Value="3" ValueChanged="Stepper_ValueChanged" HorizontalOptions="Center" Visual="Material"></Stepper>
                <FlexLayout x:Name="flxContainer" Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignContent="Start">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame Padding="0" HasShadow="False" Visual="Material" CornerRadius="0">
                                <Image Aspect="AspectFill" Source="{Binding .}" />
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>